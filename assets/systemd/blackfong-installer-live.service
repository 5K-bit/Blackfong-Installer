[Unit]
Description=Blackfong Installer (Live)
After=network-online.target
Wants=network-online.target
ConditionPathExists=/etc/blackfong-live

[Service]
Type=simple
ExecStart=/usr/bin/python3 -m blackfong_installer --state /var/lib/blackfong-installer/state.json
Restart=on-failure
RestartSec=2

[Install]
WantedBy=multi-user.target
